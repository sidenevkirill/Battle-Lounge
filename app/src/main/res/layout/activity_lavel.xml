<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgapp"
    tools:context="com.battle.lounge.lavel.Lavel1">

    <TextView
        android:id="@+id/textScreen"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Well Done" />


    <ImageView
        android:id="@+id/bigboss"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/logotip"
        android:layout_width="250dp"
        android:layout_height="180dp" />


    <TextView
        android:id="@+id/textQuestion"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:textSize="28sp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="LAVEL" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:text="1"
            android:textSize="28sp"
            android:background="@drawable/bgitem"
            android:onClick="onOne"
            android:id="@+id/textTitle"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:text="2"
            android:textSize="28sp"
            android:background="@drawable/bgitem"
            android:onClick="Two"
            android:id="@+id/textBtn"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:text="3"
            android:textSize="28sp"
            android:background="@drawable/bgitem"
            android:onClick="Free"
            android:id="@+id/close"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:text="4"
            android:textSize="28sp"
            android:background="@drawable/bgitem"
            android:onClick="Fo"
            android:id="@+id/clos"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:text="5"
            android:textSize="28sp"
            android:background="@drawable/bgitem"
            android:onClick="five"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:text="6"
            android:textSize="28sp"
            android:background="@drawable/bgitem"
            android:onClick="six"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="7"
            android:textSize="28sp"
            android:background="@drawable/bgitem"
            android:onClick="seven"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:text="8"
            android:textSize="28sp"
            android:background="@drawable/bgitem"
            android:onClick="nite"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:text="9"
            android:textSize="28sp"
            android:background="@drawable/bgitem"
            android:onClick="en"
            android:textColor="#7B1FA2"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>



</android.support.v7.widget.LinearLayoutCompat>